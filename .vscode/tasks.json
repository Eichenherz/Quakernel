{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "qemu: run hdd (debug)",
      "type": "shell",
      "command": "${workspaceFolder}/run_qemu.sh",
      "args": [
        "${workspaceFolder}/Images/Quakernel_Debug_riscv64.hdd",
        "--debug"
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "isBackground": true,
      "problemMatcher": [
        {
          "owner": "qemu",
          "pattern": [
            { "regexp": ".*" }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".*",
            "endsPattern": "^QEMU_GDB_READY tcp::1234$"
          }
        }
      ],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": false
      }
    },
    {
      "label": "qemu: stop",
      "type": "shell",
      "command": "bash",
      "args": [
        "-lc",
        "pkill -f \"qemu-system-riscv64.*-gdb tcp::1234\" || true"
      ],
      "problemMatcher": []
    }
  ]
}